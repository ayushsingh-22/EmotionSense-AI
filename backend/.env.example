# Server Configuration
PORT=8080
NODE_ENV=development

# Gemini API Configuration (Primary LLM)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# LLaMA Configuration (Fallback LLM)
LLAMA_MODEL_PATH=/models/llama3
LLAMA_API_URL=http://localhost:8080/api/generate
LLAMA_ENABLED=false

# Speech-to-Text Configuration (Vosk - Offline)
STT_PROVIDER=vosk
VOSK_MODEL_PATH=./models/vosk-model-small-en-us-0.15
VOSK_SAMPLE_RATE=16000

# Text-to-Speech Configuration (Google TTS and Sarvam AI)
TTS_ENABLED=true
TTS_PROVIDER=google
# Google Cloud TTS Configuration (Primary - Cloud, High Quality)
GOOGLE_TTS_API_KEY=your_google_api_key_here
GOOGLE_TTS_VOICE=en-US-Neural2-C
GOOGLE_TTS_LANGUAGE=en-US
GOOGLE_TTS_AUDIO_ENCODING=MP3
GOOGLE_TTS_SPEED=1.0
GOOGLE_TTS_PITCH=0.0
# Sarvam AI TTS Configuration (Indian Languages - Cloud API, Fallback)
SARVAM_API_KEY=your_sarvam_api_key_here

# Murf AI TTS Configuration (Third Fallback - High Quality)
MURF_API_KEY=your_murf_api_key_here
MURF_VOICE_ID=Matthew
MURF_MODEL=FALCON
MURF_LOCALE=en-US

# HuggingFace API Configuration (for emotion detection)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
TEXT_EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
VOICE_EMOTION_MODEL=ehcalabres/wav2vec2-lg-xlsr-en-speech-emotion-recognition

# Database Configuration
DATABASE_TYPE=firestore
FIRESTORE_PROJECT_ID=your_project_id
FIRESTORE_PRIVATE_KEY=your_private_key
FIRESTORE_CLIENT_EMAIL=your_client_email

# SQLite Configuration (alternative)
SQLITE_DB_PATH=./data/emotions.db

# Storage Configuration
TEMP_AUDIO_PATH=./temp/audio
MAX_AUDIO_FILE_SIZE=10485760
ALLOWED_AUDIO_FORMATS=wav,mp3,ogg,webm

# Multi-Modal Configuration
EMOTION_FUSION_STRATEGY=weighted
TEXT_EMOTION_WEIGHT=0.5
VOICE_EMOTION_WEIGHT=0.5
CONFIDENCE_THRESHOLD=0.6

# Chat Memory Configuration
CHAT_MEMORY_LENGTH=10

# Google Cloud Voice APIs (for fallback STT and high-quality TTS)
# Get credentials from Google Cloud Console
# https://cloud.google.com/docs/authentication/application-default-credentials
GOOGLE_STT_API_KEY=your_google_stt_api_key_here
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-cloud-key.json

# API Base URL (used for generating audio URLs in responses)
API_BASE_URL=http://localhost:8080

# Email Configuration (Nodemailer for Emergency Alerts)
# Enable email alerts
EMAIL_ENABLED=true
# Email provider: gmail, outlook, smtp, sendgrid
EMAIL_PROVIDER=gmail

# Gmail Configuration (for App Password: https://myaccount.google.com/apppasswords)
GMAIL_EMAIL=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_app_password_here

# Outlook Configuration (alternative provider)
OUTLOOK_EMAIL=your_email@outlook.com
OUTLOOK_PASSWORD=your_password_here

# Generic SMTP Configuration (alternative provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_EMAIL=your_email@example.com
SMTP_PASSWORD=your_password_here

# SendGrid Configuration (alternative provider)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@emotionsense.ai

# Safety & Emergency Contact Settings
ENABLE_EMERGENCY_ALERTS=true
# Comma-separated list of high-risk keywords (triggers immediate alert)
HIGH_RISK_KEYWORDS=suicide,self-harm,harm myself,kill myself,end my life,hurt myself,suicidal
# Comma-separated list of medium-risk keywords
MEDIUM_RISK_KEYWORDS=worthless,burden,give up,no point,hopeless

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
